{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/bridge/**",
        "destination": "https://small-world-bridge-backend-2--small-world-bridges-ui.us-east4.hosted.app/bridge"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
